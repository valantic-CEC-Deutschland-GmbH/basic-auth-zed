{
    "name": "valantic-spryker/basic-auth-zed",
    "type": "library",
    "description": "Provides basic auth to Zed layer",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "symfony/http-foundation": "^5.4.0 || ^6.0.0",
        "spryker/log": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "ValanticSpryker\\": "src/ValanticSpryker/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ValanticSprykerTest\\": "tests/ValanticSprykerTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "gitlab-domains": [
            "gitlab.nxs360.com"
        ]
    },
    "authors": [
        {
            "name": "Valantic",
            "homepage": "https://www.valantic.com"
        }
    ],
    "keywords": [
        "spryker"
    ],
    "include-path": [
        "src/"
    ],
    "require-dev": {
        "codeception/codeception": "^5.0.2",
        "spryker/code-sniffer": "^0.17.18",
        "spryker/architecture-sniffer": "^0.5.0",
        "spryker/testify": "^3.40.0",
        "codeception/module-asserts": "^3.0",
        "mockery/mockery": "^1.5",
        "spryker/event-dispatcher": "^1.3",
        "codeception/lib-innerbrowser": "^3.1"
    },
    "scripts": {
        "cs-check": "phpcs -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml --report=full src",
        "cs-fix": "phpcbf --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src",
        "md-check": "phpmd src/ text phpmd-ruleset.xml --minimumpriority 2",
        "test": "vendor/bin/codecept run"
    }
}
